{% extends 'base.html.twig' %}

{% block title %}All programs in category {{ category[0].name }}{% endblock %}

{% block body %}

    <h1>Tous les programmes de la categorie {{ category[0].name }} : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée dans cette catégorie.
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}