{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.number }} de la série {{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Titre de la série : {{ program.title }}</h1>
            <p>Synopsis de la série : {{ program.synopsis }}</p>
            <p>Catégorie de la série : {{ program.category.name }}</p>
            <p>Description de la saison : {{ season.description }}</p>
            <ul>
                {% for episode in season.episodes %}
                <li>Episode numero {{episode.number}} : {{episode.title}}</li>
                {% endfor %}
            </ul>

        </div>
    </div>


    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}