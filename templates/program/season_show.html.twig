{% extends 'base.html.twig' %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Série {{ program.title }}</h1>
            <p>Synopsis de la série : {{ program.synopsis }}</p>
            <p>Catégorie de la série : {{ program.category.name }}</p>
            <p>Numéro de la saison : {{season.number}}</p>
            <p>Description de la saison : {{season.description}}</p>

            <ul>
              {% for episode in season.episodes %}
                <li>Titre de l'épisode numéro {{episode.number}}: {{episode.title}}</li>
              {% endfor %}
            </ul>

        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}